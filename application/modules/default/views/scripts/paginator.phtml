<?php if ($this->pageCount > 1): ?>
    <div class="paginationControl">
        <!-- Previous page link -->
    <?php if (isset($this->previous)): ?>
        <a href="?page=<?php echo $this->previous; ?>#obecnosci">
            &lt; Poprzednia
        </a> |
    <?php else: ?>
            <span class="disabled">&lt; Poprzednia</span> |
    <?php endif; ?>

            <!-- Numbered page links -->
    <?php foreach ($this->pagesInRange as $page): ?>
    <?php if ($page != $this->current): ?>
                    <a href="?page=<?php echo $page; ?>#obecnosci">
        <?php echo $page; ?>
                </a> |
    <?php else: ?>
    <?php echo $page; ?> |
    <?php endif; ?>
    <?php endforeach; ?>

                        <!-- Next page link -->
    <?php if (isset($this->next)): ?>
                            <a href="?page=<?php echo $this->next; ?>#obecnosci">
                                Następna &gt;
                            </a>
    <?php else: ?>
                                <span class="disabled">Następna &gt;</span>
    <?php endif; ?>
                            </div>
<?php endif; ?>
